{
  "name": "algorithms",
  "version": "0.1.0",
  "description": "Algorithms 4th version",
  "main": "index.js",
  "repository": "git@github.com:devrsi0n/Algorithms.git",
  "author": "devrsi0n <devrsi0n@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "release": "lerna version --conventional-commits",
    "publish": "lerna publish from-git",
    "build": "lerna run --stream --toposort build",
    "lint": "eslint --fix --ext .tsx,.ts,.js packages/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{html,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettify-ts-react": "^0.1.4",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
