{
  "compileOnSave": true,
  "compilerOptions": {
    // "incremental": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "pretty": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es5",
    // "strict": true,
    "types": ["jest"],
    "outDir": "lib"
  },
  "exclude": ["node_modules", "lib", "**/*.test.ts", "jsweet"],
  "noEmitOnError": true
}
