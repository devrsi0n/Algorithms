{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    // "importHelpers": true,
    "target": "ES5",
    "moduleResolution": "node",
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components/index"],
      "@icons/*": ["icons/*"],
      "@icons": ["icons/index"],
      "@sections/*": ["sections/*"],
      "@sections": ["sections/index"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles/index"],
      "@templates/*": ["templates/*"],
      "@templates": ["templates/index"],
      "@types/*": ["types/*"],
      "@types": ["types/index"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils/index"]
    },
    "types": ["node"],
    "typeRoots": ["./src/types", "**/node_modules/@types"],
    "outDir": "./lib"
  },
  // "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js"],
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js"],
  "exclude": ["node_modules", "**/node_modules/*", "lib", "public", ".cache"]
}
