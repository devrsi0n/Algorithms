{
  "compileOnSave": true,
  "compilerOptions": {
    // "incremental": true,
    // "importHelpers": true,
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "types": ["jest"],
    "outDir": "lib"
  },
  "exclude": ["node_modules", "lib", "**/*.test.ts"],
  "noEmitOnError": true
}
